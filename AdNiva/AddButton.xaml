<UserControl x:Class="AdNiva.AddButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdNiva"
             mc:Ignorable="d" FontFamily="Trebuchet MS" FontSize="24" Foreground="Green">
    <Grid HorizontalAlignment="Center" Height="80" VerticalAlignment="Center" Width="250">
        <Rectangle HorizontalAlignment="Left" Height="77" Stroke="Green" StrokeThickness="5" StrokeDashArray="2 1" VerticalAlignment="Top" Width="250"/>
        <Ellipse HorizontalAlignment="Left" Height="60" Margin="50,10,0,0" Stroke="Green" StrokeThickness="4" StrokeDashArray="1 2" VerticalAlignment="Top" Width="60"/>
        <TextBlock x:Name="AddButtonText" Margin="130,20,10,0" TextWrapping="Wrap" Text="TextBlock" Height="40" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
